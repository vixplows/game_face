<p id="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<h1 align = "center">Player Profiles</h1>

<% @profiles.each do |profile| %>
<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <div class="well well-lg">
      <div class= "user-name">
        <%= link_to profile.username, profile%>
      </div>
      <div class="fave-game">
        <%= profile.fave_game %>
      </div>
      <div class="user-bio">
        <%= profile.bio %>
      </div>
      <div class="user-city">
        <%= profile.city %>
      </div>
    </div>
  </div>
</div>

<% end %>